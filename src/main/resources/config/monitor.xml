<monitor>
	<name>ElasticSearchMonitor</name>
	<type>managed</type>
	<description>Monitors Elastic Search</description>
	<monitor-configuration></monitor-configuration>
	<monitor-run-task>
		<execution-style>periodic</execution-style>
		<execution-frequency-in-seconds>60</execution-frequency-in-seconds>
		<name>Elastic Search Monitor Run Task</name>
		<display-name>Elastic Search Monitor Task</display-name>
		<description>Elastic Search Monitor Task</description>
		<type>java</type>
		<execution-timeout-in-secs>60</execution-timeout-in-secs>
		<task-arguments>
			<argument name="host" is-required="true" default-value="localhost" />
			<argument name="port" is-required="true" default-value="9200" />
			
			<!-- Optional Properties -->
			<!--
			<argument name="username" is-required="true" default-value=""/>
			<argument name="password" is-required="false" default-value=""/>
			<argument name="use-ssl" is-required="false" default-value="false"/>
			<argument name="proxy-host" is-required="false" default-value=""/>
			<argument name="proxy-port" is-required="false" default-value=""/>
			<argument name="proxy-username" is-required="false" default-value=""/>
			<argument name="proxy-password" is-required="false" default-value=""/>
			<argument name="metric-prefix" is-required="false" default-value="Custom Metrics|Elastic Search|"/>
			-->
		</task-arguments>
		<java-task>
		      <classpath>elasticsearch-monitoring-extension.jar</classpath>
		          <impl-class>com.appdynamics.extensions.elasticsearch.ElasticSearchMonitor</impl-class>
		</java-task>
	</monitor-run-task>
</monitor>
